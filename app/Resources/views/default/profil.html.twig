{% extends 'base.html.twig' %}
{% block body %}
{{ render(controller('AppBundle:Default:menu')) }}

  {% if app.user != null %}
  {% set friendship = '1' %}
  <div class="zone_affichage container">
    <div class="row">

      <div class="col-xs-4 col-lg-4 dashboard_users">
        <div class="widget">
          <div class="cover">

          </div>
          {% for u in user %}
              <img src="{{ asset('images/Avatar/' ~ u.id ~ '.png') }}" class="photo" alt="{{u.name}} {{ u.lastname}}">
              <br><br>
              <li><h4>{{ u.name }} {{ u.lastname }}</h4></li>
              <li><h4>Level : {{ u.level }}</h4></li>
              {% if u.id != app.user.id %}
                {% if isfriend %}
                      {% for f in isfriend %}
                          {% if (f.STATUT == 1) %}
                                <li style="color:#e7e7e7; text-align:center"> Vous êtes amis avec {{u.name}}. </li>
                          {% elseif (f.STATUT == 0) %}
                                {% set friendship = '0' %}
                                {% if f.UID1 == u.id %}
                                    <a href="profil/{{ u.id }}/{{ app.user.id }}/{{f.UID_REL}}"><button type="button" class="btn btn-primary">Accepter la demande de {{ u.name }}</button></a>
                                {% elseif f.UID2 == u.id %}
                                  <li> Une invitation à été envoyée a {{ u.name }} ! </li>
                                {% endif %}
                          {% endif %}
                      {% endfor %}
                {% else %}
                        <li><h4><a href="{{ u.id }}/{{ app.user.id }}/-1/1"><button type="button" class="btn btn-primary">Ajouter {{ u.name }} à mes amis !</button></a></h4></li>
                {% endif %}
              {% endif %}

              <ul>
                <li>
                {% if u.id == app.user.id  %}
                  <a href="#" data-toggle="modal" data-target="#ModalInsc"><i class="fa fa-photo"></i></a>
                {% endif %}
                </li>
              </ul>
        </div>

        	<!-- Modal inscription-->
        	<div class="modal fade" id="ModalInsc" role="dialog">
        		<div class="modal-dialog">

        			<!-- Modal content-->
        			<div class="modal-content">
        				<div class="modal-header">
        					<button type="button" class="close" data-dismiss="modal">&times;</button>
        					<h3 class="modal-title"><span class="glyphicon glyphicon-user padding-icon-right"></span>Changement Photo Profil</h3>
        				</div>
        				<div class="modal-body">
        					<p>Choisissez votre nouvelle photo !</p>
        				</div>
                <div style="text-align:center; margin-bottom:30px;">
                {{ form_start(formpp) }}
                {{ form_widget(formpp) }}
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-btn fa-sign-in"></i> Changer sa photo !
                </button>
                {{ form_end(formpp) }}
              </div>
        			</div>

        		</div>
        	</div>
        <div style="margin-top:20px">
          <div class="panel panel-default">
            <div class="panel-heading">
                  <i class="fa fa-bar-chart-o fsa-fw"></i> Les dernières stats' de {{u.name}} :
            </div>
          </div>
        </div>
      </div>


      <div class="col-lg-8 col-xs-8">
        <div class="panel panel-default">
          <div class="panel-heading">
                <i class="fa fa-pencil"></i> Exprimez-vous
          </div>
              {% for f in isfriend %}
                  {% if (f.STATUT == 1) %}
                    {{ form_start(formpost) }}
                    {{ form_widget(formpost) }}
                    {% if u.id != app.user.id %}
                      <button type="submit" style="margin-top: 10px;" class="btn btn-primary">Ecrire sur le mur de {{u.name}} ! </button>
                    {% else %}
                      <button type="submit" class="btn btn-primary" style="margin-top: 10px;">Partager avec mes amis !</button>
                    {% endif %}
                      {{ form_end(formpost) }}
                  {% endif %}
              {% endfor %}
              {% if u.id == app.user.id %}
                {{ form_start(formpost) }}
                {{ form_widget(formpost) }}
                  <button type="submit" class="btn btn-primary" style="margin-top: 10px;">Partager avec mes amis !</button>
                {{ form_end(formpost) }}
              {% endif %}
            </div>
            <div class="panel panel-default">
              <div class="panel-heading">
                    <i class="fa fa-bookmark"></i> Statut
              </div>
              <div class="style_post">
              {% if posts %}
                {% for p in posts %}
                  <li>{{p.name}} {{p.lastname}}: "{{ p.content }}"</li>
                  {% if p.img %}
                    <img src =" {{ asset('images/Posts/{{p.src}}') }}" alt="Post de {{ u.name }}">
                  {% endif %}

                {% endfor %}
              {% endif %}
              </div>
            </div>
            {% if u.id != app.user.id %}
            <div class="panel panel-default">

              <div class="panel-heading">
                    <i class="fa fa-bookmark"></i> Discussion
              </div>
              <div style="padding:20px">
              <h4> Ma discussion avec {{ u.name }}</h4>
              {% if messages %}
                {% for m in messages %}
                  <ul>

                    {% if m.UID1 == u.id %}
                      <li style="text-align: left;">{{ m.CONTENT }}</li>
                    {% else %}
                      <li style ="text-align: right;"> {{ m.CONTENT }}</li>
                    {% endif %}
                  </ul>
                {% endfor %}
              {% else %}
                <li> Envoyez un message à {{u.name}} ! </li>
              {% endif %}
              {{ form_start(formchat) }}
              {{ form_widget(formchat) }}
                <button type="submit" class="btn btn-primary" style="margin-top: 10px;">Envoyer !</button>
              {{ form_end(formchat) }}
            {% endif %}
          {% endfor %}
        {% endif %}
      </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
