  {% extends 'base.html.twig' %}
  {% block body %}

  <div class="zone_affichage container">


  <div class="row">
  {% if app.user != null %}
  {% set friendship = '1' %}


    {% for u in user %}
        <div class="col-lg-4 col-xs-4;">

              <img src="images/Avatar/{{u.id}}.png" class="img-circle" alt="{{u.name}} {{ u.lastname}}">
              {% if u.id == app.user.id  %}
                <a>Modifier votre photo de profil</a>
              {% endif %}
              <h2> {{ u.name }} {{ u.lastname }} </h2>
              <h3> Level : {{ u.level }}</h3>
              {% if u.id != app.user.id %}
                {% if isfriend %}
                      {% for f in isfriend %}
                          {% if (f.STATUT == 1) %}
                                <li> Vous etes amis avec {{u.name}} </li>
                          {% elseif (f.STATUT == 0) %}
                                {% set friendship = '0' %}
                                {% if f.UID1 == u.id %}
                                    <a href="{{ u.id }}/{{ app.user.id }}/{{f.UID_REL}}"><button type="button" class="btn btn-primary">Accepter la demande de {{ u.name }}</button></a>
                                {% elseif f.UID2 == u.id %}
                                  <li> Une invitation à été envoyée a {{ u.name }} ! </li>
                                {% endif %}
                          {% endif %}
                      {% endfor %}
                {% else %}
                        <a href="{{ u.id }}/{{ app.user.id }}/-1"><button type="button" class="btn btn-primary">Ajouter {{ u.name }} à mes amis !</button></a>
                {% endif %}
              {% endif %}
            </div>

              <div class="col-lg-8 col-xs-8">
                <div class="panel panel-default">
                    <div class="panel-heading">
              {% for f in isfriend %}
                  {% if (f.STATUT == 1) %}
              {{ form_start(formpost) }}
              {{ form_widget(formpost) }}
              {% if u.id != app.user.id %}
              <button type="submit" class="btn btn-primary">Ecrire sur le mur de {{u.name}} ! </button>
              {% else %}
              <button type="submit" class="btn btn-primary">Partager avec mes amis !</button>
              {% endif %}
              {{ form_end(formpost) }}
                  {% endif %}
              {% endfor %}
              {% if u.id == app.user.id %}
              {{ form_start(formpost) }}
              {{ form_widget(formpost) }}
              <button type="submit" class="btn btn-primary">Partager avec mes amis !</button>
              {{ form_end(formpost) }}
              {% endif %}

            {% if posts %}
            {% for p in posts %}
                <li>{{p.name}} {{p.lastname}}: "{{ p.content }}"</li>
                {% if p.img %}
                  <img src ="images/Posts/{{p.src}}" alt="post de {{ u.name }}">
                {% endif %}

            {% endfor %}
            {% endif %}
          </div>
          {% if u.id != app.user.id %}
            <h4> Ma discussion avec {{ u.name }}</h4>
            {% if messages %}
              {% for m in messages %}
              <ul>

                {% if m.UID1 == u.id %}
                <li style="text-align: left;">{{ m.CONTENT }}</li>
              {% else %}
                <li style ="text-align: right;"> {{ m.CONTENT }}</li>
              {% endif %}
            </ul>
            {% endfor %}
            {% else %}
            <li> Envoyez un message à {{u.name}} ! </li>
            {% endif %}
            {{ form_start(formchat) }}
            {{ form_widget(formchat) }}
            <button type="submit" class="btn btn-primary">Envoyer !</button>
            {{ form_end(formchat) }}
            </div>
        </div>
    </div>
</div>

                {% endif %}
      {% endfor %}
      {% endif %}
    {% endblock %}
